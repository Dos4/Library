{
  "ConnectionStrings": {
    "DB": "Server=localhost;Database=library;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=True;"
  },

  "Filter": {
    "Title": "1984",
    "Genre": null,
    "Author": null,
    "Publisher": null,
    "MoreThanPages": null,
    "LessThanPages": null,
    "PublishedBefore": null,
    "PublishedAfter": null
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Error",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "log.txt",
          "rollingInterval": "Day",
          "shared": true,
          "append": true
        }
      }
    ]
  }
}